<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo4.controllers.CustomerController">
    <top>
        <ToolBar>
            <Button text="Đăng xuất" onAction="#onLogout"/>
            <Button text="Quay lại Menu" onAction="#backToMenu"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="8">
            <Label text="Danh sách sự kiện" style="-fx-font-size:16px;"/>

            <TableView fx:id="eventTable" prefHeight="400">
                <columns>

                    <!-- Cột Tiêu đề với TextField filter -->
                    <TableColumn fx:id="colTitle" prefWidth="200">
                        <graphic>
                            <TextField fx:id="filterTitle" promptText="Tiêu đề"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Ngày với DatePicker filter -->
                    <TableColumn fx:id="colDate" prefWidth="150">
                        <graphic>
                            <DatePicker fx:id="filterDate" promptText="Ngày"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Bắt đầu -->
                    <TableColumn fx:id="colStart" prefWidth="100">
                        <graphic>
                            <TextField fx:id="filterStart" promptText="Bắt đầu"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Kết thúc -->
                    <TableColumn fx:id="colEnd" prefWidth="100">
                        <graphic>
                            <TextField fx:id="filterEnd" promptText="Kết thúc"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Địa điểm với TextField filter -->
                    <TableColumn fx:id="colLocation" prefWidth="200">
                        <graphic>
                            <TextField fx:id="filterLocation" promptText="Địa điểm"/>
                        </graphic>
                    </TableColumn>

                </columns>
            </TableView>


            <Label text="Tạo sự kiện mới" style="-fx-font-size:14px; -fx-font-weight:bold;"/>

        <GridPane hgap="10" vgap="10">

            <Label text="Tiêu đề:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Ngày:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Giờ bắt đầu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <ComboBox fx:id="cbStartHour" promptText="Giờ"/>
                <ComboBox fx:id="cbStartMinute" promptText="Phút"/>
            </HBox>

            <Label text="Giờ kết thúc:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <ComboBox fx:id="cbEndHour" promptText="Giờ"/>
                <ComboBox fx:id="cbEndMinute" promptText="Phút"/>
            </HBox>

            <Label text="Địa điểm:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="txtLocation" promptText="Chọn địa điểm" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Mô tả:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtDesc" GridPane.rowIndex="5" GridPane.columnIndex="1" prefRowCount="2"/>

        </GridPane>

        <Button text="Thêm sự kiện" onAction="#onAddEvent"/>
        <Button text="Cập nhật sự kiện" onAction="#onOpenUpdate"/>
        </VBox>

    </center>
</BorderPane>
