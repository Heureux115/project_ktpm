<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo4.controllers.AssetsController"
      spacing="10"
      style="-fx-padding: 15;">

    <Label text="Quản lý cơ sở vật chất"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tblAssets" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Tên" prefWidth="160"/>
            <TableColumn fx:id="colType" text="Loại" prefWidth="120"/>
            <TableColumn fx:id="colQuantity" text="SL" prefWidth="80"/>
            <TableColumn fx:id="colStatus" text="Tình trạng" prefWidth="120"/>
            <TableColumn fx:id="colActions" text="Thao tác" prefWidth="160"/>
        </columns>
    </TableView>

    <Separator/>

    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Tên tài sản"/>
        <TextField fx:id="txtType" promptText="Loại"/>
        <TextField fx:id="txtQuantity" promptText="Số lượng"/>
        <ComboBox fx:id="cbStatus" promptText="Tình trạng"/>
        <Button text="Thêm" onAction="#onAddAsset"/>
    </HBox>
    <Button text="Trả tài sản" onAction="#openReturnAsset"/>
    <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>

</VBox>
