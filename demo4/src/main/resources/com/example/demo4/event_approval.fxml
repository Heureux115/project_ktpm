<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo4.controllers.EventApprovalController">

    <top>
        <ToolBar>
            <Label text="Duyệt sự kiện"
                   style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding:10;">

            <TableView fx:id="tblEvents" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitle" text="Tiêu đề" prefWidth="220"/>
                    <TableColumn fx:id="colDate" text="Ngày" prefWidth="120"/>
                    <TableColumn fx:id="colLocation" text="Địa điểm" prefWidth="220"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="140"/>
                </columns>
            </TableView>

            <Label fx:id="lblMessage"/>

        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT"
              style="-fx-padding:10; -fx-background-color:#f4f4f4;">
            <Button text="Đã thanh toán" onAction="#onMarkPaid"/>
            <Button text="Xác nhận" onAction="#onMarkConfirmed"/>
            <Button text="Huỷ" onAction="#onMarkCancelled"/>
        </HBox>
    </bottom>

</BorderPane>
