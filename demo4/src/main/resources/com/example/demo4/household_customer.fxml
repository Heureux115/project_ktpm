<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo4.controllers.HouseholdCustomerController">

    <top>
        <ToolBar>
            <Label text="Nhân khẩu thuộc hộ khẩu của bạn"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Menu" onAction="#backToMenu"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columns>

                <TableColumn fx:id="colName"
                             text="Họ tên"
                             prefWidth="180"/>

                <TableColumn fx:id="colCccd"
                             text="CCCD"
                             prefWidth="150"/>

                <TableColumn fx:id="colDob"
                             text="Ngày sinh"
                             prefWidth="120"/>

                <TableColumn fx:id="colRelation"
                             text="Quan hệ"
                             prefWidth="120"/>

                <TableColumn fx:id="colJob"
                             text="Nghề nghiệp"
                             prefWidth="200"/>

            </columns>
        </TableView>
    </center>

</BorderPane>
