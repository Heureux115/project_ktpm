<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo4.controllers.EditCitizenController"
      spacing="10"
      style="-fx-padding:15;">

    <Label text="Sửa thông tin công dân"
           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Họ tên"/>
        <TextField fx:id="tfName" GridPane.columnIndex="1"/>

        <Label text="Quan hệ" GridPane.rowIndex="1"/>
        <TextField fx:id="tfRelation" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Ngày sinh" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dpDob" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="CCCD" GridPane.rowIndex="3"/>
        <TextField fx:id="tfCCCD" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Nghề nghiệp" GridPane.rowIndex="4"/>
        <TextField fx:id="tfJob" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>
