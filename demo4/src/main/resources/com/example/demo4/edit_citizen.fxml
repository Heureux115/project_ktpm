<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" fx:controller="com.example.demo4.controllers.EditCitizenController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Sửa Công dân" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="tfName" promptText="Họ và tên"/>
    <TextField fx:id="tfRelation" promptText="Quan hệ"/>
    <TextField fx:id="tfDob" promptText="Ngày sinh"/>
    <TextField fx:id="tfCCCD" promptText="CCCD"/>
    <TextField fx:id="tfJob" promptText="Nghề nghiệp"/>

    <HBox spacing="10">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>

