<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo4.controllers.PastEventsController">

    <top>
        <ToolBar>
            <Label text="Sự kiện đã qua (trên 30 ngày)"
                   style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="8" style="-fx-padding:10;">

            <TableView fx:id="tblPastEvents" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitle" text="Tiêu đề" prefWidth="220"/>
                    <TableColumn fx:id="colDate" text="Ngày" prefWidth="130"/>
                    <TableColumn fx:id="colLocation" text="Địa điểm" prefWidth="220"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="140"/>
                </columns>
            </TableView>

            <Label fx:id="lblMessage"/>

        </VBox>
    </center>

</BorderPane>
