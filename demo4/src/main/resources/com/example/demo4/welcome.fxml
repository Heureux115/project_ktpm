<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Button?>

<Pane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo4.controllers.WelcomeController"
      prefWidth="800" prefHeight="500" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">

    <!-- Hộp ? -->
    <ImageView fx:id="box"
               layoutY="250"
               fitWidth="100" fitHeight="100"/>
    <!-- Mario -->
    <ImageView fx:id="mario"
               layoutX="50" layoutY="300"
               fitWidth="200" fitHeight="150"/>

    <!-- Text bật ra -->
    <Text fx:id="successText"
          text="LOGIN SUCCESS!"
          layoutY="220"
          fill="yellow"
          style="-fx-font-size: 32px; -fx-font-weight: bold;"
          opacity="0"/>

    <!-- Text cuộn cuối -->
    <Text fx:id="scrollText"
          text="Welcome to the system!&#10;Loading dashboard"
          textAlignment="CENTER"
          layoutY="500"
          fill="white"
          style="-fx-font-size: 22px;"
          opacity="0"
    />


    <Button fx:id="btnSkip"
            text="Skip >>"
            onAction="#onSkip"
            layoutX="700"
            layoutY="20"
            style="-fx-background-color: #FFD700;
                   -fx-text-fill: black;
                   -fx-font-weight: bold;
                   -fx-font-family: 'Aptos Slab';
                   -fx-font-weight: bold;
                   -fx-font-size: 14px;
                   -fx-border-color: black;
                   -fx-border-radius: 15;
                   -fx-background-radius: 15;
                   -fx-border-width: 1px;
                   -fx-cursor: hand;"/>

</Pane>
