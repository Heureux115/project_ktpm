<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo4.controllers.CustomerController">

    <top>
        <ToolBar>
            <Label text="SỰ KIỆN NHÀ VĂN HÓA"
                   style="-fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Menu" onAction="#backToMenu"/>
            <Button text="Đăng xuất" onAction="#onLogout"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding:10;">

            <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitle" text="Tiêu đề" prefWidth="220"/>
                    <TableColumn fx:id="colDate" text="Ngày" prefWidth="130"/>
                    <TableColumn fx:id="colStart" text="Bắt đầu" prefWidth="90"/>
                    <TableColumn fx:id="colEnd" text="Kết thúc" prefWidth="90"/>
                    <TableColumn fx:id="colLocation" text="Địa điểm" prefWidth="200"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="140"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Thêm sự kiện" onAction="#onAddEvent"/>
                <Button text="Cập nhật" onAction="#onOpenUpdate"/>
                <Button text="Reset bảng" onAction="#onResetTable"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
