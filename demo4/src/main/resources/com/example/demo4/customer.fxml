<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo4.controllers.CustomerController">

    <top>
        <ToolBar>
            <Button text="Đăng xuất" onAction="#onLogout"/>
            <Button text="Quay lại Menu" onAction="#backToMenu"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="8">
            <Label text="Danh sách sự kiện" style="-fx-font-size:16px;"/>

            <TableView fx:id="eventTable" prefHeight="400">
                <columns>

                    <!-- Cột Tiêu đề với TextField filter -->
                    <TableColumn fx:id="colTitle" prefWidth="200">
                        <graphic>
                            <TextField fx:id="filterTitle" promptText="Tiêu đề"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Ngày với DatePicker filter -->
                    <TableColumn fx:id="colDate" prefWidth="150">
                        <graphic>
                            <DatePicker fx:id="filterDate" promptText="Ngày"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Bắt đầu -->
                    <TableColumn fx:id="colStart" prefWidth="100">
                        <graphic>
                            <TextField fx:id="filterStart" promptText="Bắt đầu"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Kết thúc -->
                    <TableColumn fx:id="colEnd" prefWidth="100">
                        <graphic>
                            <TextField fx:id="filterEnd" promptText="Kết thúc"/>
                        </graphic>
                    </TableColumn>

                    <!-- Cột Địa điểm với TextField filter -->
                    <TableColumn fx:id="colLocation" prefWidth="200">
                        <graphic>
                            <TextField fx:id="filterLocation" promptText="Địa điểm"/>
                        </graphic>
                    </TableColumn>

                    <TableColumn fx:id="colStatus" prefWidth="200">
                        <graphic>
                            <TextField fx:id="filterStatus" promptText="Trạng thái"/>
                        </graphic>
                    </TableColumn>

                </columns>
            </TableView>

            <!-- Chỉ còn 2 nút thao tác -->
            <HBox spacing="10">
                <Button text="Thêm sự kiện" onAction="#onAddEvent"/>
                <Button text="Cập nhật sự kiện" onAction="#onOpenUpdate"/>
                <Button text="Reset bảng" onAction="#onResetTable"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
