<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo4.controllers.StaffController">
    <top>
        <ToolBar>
            <Button text="Đăng xuất" onAction="#onLogout"/>
        </ToolBar>
    </top>
    <center>
        <HBox spacing="12" padding="10">
            <VBox spacing="6" prefWidth="600">
                <Label text="Events" style="-fx-font-size:16px;"/>
                <TableView fx:id="tblEvents" prefHeight="420">
                    <columns>
                        <TableColumn text="Tiêu đề" prefWidth="300"/>
                        <TableColumn text="Ngày" prefWidth="120"/>
                        <TableColumn text="Địa điểm" prefWidth="180"/>
                    </columns>
                </TableView>
                <HBox spacing="8">
                    <Button text="Thêm" onAction="#onAdd"/>
                    <Button text="Cập nhật" onAction="#onUpdate"/>
                    <Button text="Xóa" onAction="#onDelete"/>
                </HBox>
            </VBox>
            <VBox spacing="6" prefWidth="360">
                <Label text="Chi tiết sự kiện"/>
                <TextField fx:id="txtTitle" promptText="Tiêu đề"/>
                <TextField fx:id="txtDate" promptText="YYYY-MM-DD"/>
                <TextField fx:id="txtLocation" promptText="Địa điểm"/>
                <TextArea fx:id="txtDesc" promptText="Mô tả" prefHeight="200"/>
                <Label fx:id="lblMessage" textFill="green"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>

