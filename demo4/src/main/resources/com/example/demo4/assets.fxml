<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo4.controllers.AssetsController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Quản lý cơ sở vật chất" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tblAssets" prefHeight="400">
        <columns>
            <TableColumn fx:id="colName" text="Tên" prefWidth="150"/>
            <TableColumn fx:id="colType" text="Loại" prefWidth="100"/>
            <TableColumn fx:id="colQuantity" text="Số lượng" prefWidth="80"/>
            <TableColumn fx:id="colStatus" text="Tình trạng" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Thao tác" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Tên"/>
        <TextField fx:id="txtType" promptText="Loại"/>
        <TextField fx:id="txtQuantity" promptText="Số lượng"/>
        <ComboBox fx:id="cbStatus"/>
        <Button text="Thêm" onAction="#onAddAsset"/>
    </HBox>

    <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>
</VBox>

