<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo4.controllers.AddHouseholdController"
      spacing="10" style="-fx-padding: 10">

    <Label text="Thêm Hộ khẩu" style="-fx-font-size: 16px; -fx-font-weight: bold"/>

    <TextField fx:id="tfId" promptText="Mã hộ khẩu"/>
    <TextField fx:id="tfHead" promptText="Tên chủ hộ"/>
    <TextField fx:id="tfAddress" promptText="Địa chỉ"/>
    <TextField fx:id="tfOwner" promptText="Chủ sở hữu (Owner, có thể bỏ trống để lấy user hiện tại)"/>

    <HBox spacing="10">
        <Button text="Thêm" onAction="#handleAdd"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>
